<% layout('layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Add New Campground</a>
    </div>
    <ul>
        <% for(let campground of campgrounds) { %>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= campground.image %>" alt="">
                    </div>
                </div>
            </div>
            <% } %>
    </ul>